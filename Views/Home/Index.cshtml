@model IEnumerable<ToDo>

@{
    ViewData["Title"] = "Home Page";
}



<div class="card-deck">
    @foreach (var toDo in Model)
    {
        <div class="card m-3" style="min-width:18rem; max-width:30.5%;">

            <div class="card-header text-center">
                <h3 style="font-weight:400">@toDo.Title</h3>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="Details" asp-route-id="@toDo.Id" class="btn btn-outline-secondary m-1 btn-sm">View</a>

                <a asp-controller="home" asp-action="Edit" asp-route-id="@toDo.Id" class="btn btn-outline-primary m-1 btn-sm">Edit</a>

                <a asp-controller="home" asp-action="Delete" asp-route-id="@toDo.Id" class="btn btn-outline-danger m-1 btn-sm">Delete</a>
            </div>
        </div>
    }
</div>
